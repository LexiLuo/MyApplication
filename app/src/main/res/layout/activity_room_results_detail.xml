<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor">

    <include layout="@layout/toolbar_layout"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/room_example"
        android:adjustViewBounds="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:background="@color/grey">
       <LinearLayout
           android:layout_width="68dp"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:background="@color/white">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="5.0"
               android:textStyle="bold"
               android:textSize="22dp"
               android:paddingTop="10dp"
               android:textColor="@color/colorAccent"
               android:layout_gravity="center"
               android:id="@+id/score" />
           <ImageView
               android:layout_width="35dp"
               android:layout_height="35dp"
               android:src="@mipmap/like2"
               android:layout_gravity="center"/>
       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginLeft="2dp"
            android:paddingLeft="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="15dp"
                   android:layout_height="15dp"
                   android:src="@mipmap/map"
                   android:layout_marginTop="11dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="The location is "
                    android:textColor="#87c38f"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="4dp"
                    android:textSize="16sp"
                    android:id="@+id/locationText1"
                    />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="50dp"
             android:orientation="horizontal">
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_marginTop="1dp">
                 <ImageView
                     android:layout_width="27dp"
                     android:layout_height="27dp"
                     android:src="@mipmap/bed"
                     android:layout_gravity="center"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="2.5 m"
                     android:layout_gravity="center"
                     android:textColor="@color/C5"/>
             </LinearLayout>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_marginLeft="20dp">
             <ImageView
                 android:layout_width="27dp"
                 android:layout_height="27dp"
                 android:src="@mipmap/wifi"
                 android:layout_gravity="center"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="wifi"
                 android:layout_gravity="center"
                 android:textColor="@color/C5"/>
         </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_marginLeft="20dp">
                 <ImageView
                     android:layout_width="24dp"
                     android:layout_height="24dp"
                     android:src="@mipmap/park_icon"
                     android:layout_gravity="center"
                     android:layout_marginTop="2dp"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="park"
                     android:layout_gravity="center"
                     android:layout_marginTop="1dp"
                     android:textColor="@color/C5"/>
             </LinearLayout>
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_marginLeft="20dp">
                 <ImageView
                     android:layout_width="25dp"
                     android:layout_height="25dp"
                     android:src="@mipmap/aircondition_icon"
                     android:layout_gravity="center"
                     android:layout_marginTop="2dp"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="AC"
                     android:layout_gravity="center"
                     android:layout_marginTop="1dp"
                     android:textColor="@color/C5"/>
             </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_marginLeft="20dp">
                 <ImageView
                     android:layout_width="27dp"
                     android:layout_height="27dp"
                     android:src="@mipmap/pakage"
                     android:layout_gravity="center"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="pakage"
                     android:layout_gravity="center"/>
             </LinearLayout>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:text="ã€‹"
                 android:layout_gravity="center"
                 android:textSize="20sp"
                 android:textStyle="bold"
                 android:layout_marginLeft="20dp"
                 android:textColor="@color/C5"/>
         </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="7dp"
        android:background="@color/bgcolor">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            android:padding="5dp"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Living Notes"
            android:textStyle="bold"
            android:textColor="@color/C6"
            android:textSize="15dp"/>
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="check in after 2 am and check out before 12 pm"
            android:gravity="center"
                android:padding="2dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="fare is offered after check out both paper and electrical"
                android:gravity="center"
                android:padding="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Negotiation process"
                android:textStyle="bold"
                android:textColor="@color/C6"
                android:textSize="15dp"
                android:padding="2dp"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:id="@+id/recycleView"
                android:orientation="horizontal"
                android:scrollIndicators="right">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:baselineAligned="true"
            android:paddingBottom="1dip"
            android:gravity="bottom"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Total Price: "
                android:textSize="18sp"
                android:textColor="@color/design_textinput_error_color_dark"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.07"
                android:layout_marginLeft="3dp"
                android:text="280$"
                android:textSize="16dp"
                android:textColor="@color/button_material_dark"
                android:id="@+id/originText2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.18"
                android:layout_marginLeft="1dp"
                android:text="260$ "
                android:textSize="18dp"
                android:textColor="@color/design_textinput_error_color_dark"
                android:textStyle="bold"
                android:id="@+id/currentPrice2"
                android:textIsSelectable="false" />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reserve"
                android:background="@drawable/round_button_orange"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:id="@+id/ReserveButton"
                android:textSize="16dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>